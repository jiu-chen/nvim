{
	//	"colors.enable": true,
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": [
				"go.work",
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true
			}
		}
	},
	"suggest.noselect": true,
	"suggest.enablePreselect": false,
	"coc.preferences.formatOnSaveFiletypes": [
		"javascript",
		"html",
		"json",
		"java",
		"python",
		"vue",
		"c",
		"cpp",
		"go"
	]
}
